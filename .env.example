# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Upload Settings
UPLOAD_FOLDER=data/uploads
OUTPUT_FOLDER=data/output
TEMP_FOLDER=data/temp
MAX_FILE_SIZE=20971520
ALLOWED_EXTENSIONS=jpg,jpeg,png,heic,webp

# n8n Integration (Optional)
N8N_ENABLED=false
N8N_WEBHOOK_URL=http://localhost:5678/webhook/process
N8N_NOTIFY_URL=http://localhost:5678/webhook/notify

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# AI/ML Settings
AI_ENABLED=true
MODEL_PATH=models/classifier.pkl
CONFIDENCE_THRESHOLD=0.7

# Database (Future)
# DATABASE_URL=postgresql://user:password@localhost/image_presentation_ai

# Telegram Notifications (Optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PATH=/home/backup/image-presentation-ai
BACKUP_RETENTION_DAYS=30
